include ../mixins/menu-category-item.pug

nav.d-none.d-lg-block(class="main_menu_2 main_menu")
  .container
    .row
      .col-12.d-flex.flex-wrap
        div(class="main_menu_area")
          div(class="menu_category_area")
            a.d-none(
              class="menu_logo" 
              href="index.html"
              )
              img.img-fluid.w-100(
                alt="Zenis" 
                src="/client/assets/images/logo_2.png"
                )
            div(class="menu_category_bar" data-bs-toggle="collapse" data-bs-target="#collapseMenuMain" aria-expanded="true")
              p
                span
                  img(
                    alt="category icon" 
                    src="/client/assets/images/bar_icon_white.svg"
                    )
                | Danh mục sản phẩm
              i.fas.fa-chevron-down
            +renderCategory(categoryProductList, 0)
          ul(class="menu_item")
            li
              a.active(href="/")
                | Trang chủ
            li
              a(href="/product/category")
                | Sản Phẩm
                i.fas.fa-chevron-down
              ul(class="menu_droapdown")
                each item in categoryProductList
                  if(item.status)
                    li
                      a(href=`/product/category/${item.slug}`) #{item.name}
            li
              a(href="#")
                | Bài Viết
                i.fas.fa-chevron-down
              ul(class="menu_droapdown")
                each item in categoryArticleList
                  if(item.status)
                    li
                      a(href=`/article/category/${item.slug}`) #{item.name}
          ul(class="menu_icon")
            li
              a(href="compare.html")
                b
                  img.img-fluid(
                    alt="Wishlist" 
                    src="/client/assets/images/compare_black.svg"
                    )
                span 2
            li
              a(href="wishlist.html")
                b
                  img.img-fluid(
                    alt="Wishlist" 
                    src="/client/assets/images/love_black.svg"
                    )
                span 5
            li
              a(
                aria-controls="offcanvasRight" 
                data-bs-target="#offcanvasRight" 
                data-bs-toggle="offcanvas"
                )
                b
                  img.img-fluid(
                    alt="cart" 
                    src="/client/assets/images/cart_black.svg"
                    )
                span(mini-cart-quantity) 0
            li
              a.user(href="dashboard.html")
                b
                  img.img-fluid(
                    alt="cart" 
                    src="/client/assets/images/user_icon_black.svg"
                    )
                h5 Smith Jhon
              ul(class="user_dropdown")
                li
                  a(href="dashboard.html")
                    svg.size-6(
                      stroke="currentColor" 
                      stroke-width="1.5" 
                      viewBox="0 0 24 24" 
