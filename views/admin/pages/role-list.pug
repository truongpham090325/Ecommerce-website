extends ../layouts/default.pug
include ../mixins/pagination.pug
include ../mixins/form-search.pug

block main
  .row
    .col-12
      .card
        .card-header
          .row.align-items-center
            .col
              h4.card-title #{pageTitle}
            // end col
            .col-auto
              if (permissions.includes("role-trash"))
                a.btn.btn-danger.me-1(
                  href=`/${pathAdmin}/role/trash`
                  )
                  i.fa-solid.fa-trash.me-1
                  | Thùng rác
              if (permissions.includes("role-create"))
                a.btn.btn-primary(
                  href=`/${pathAdmin}/role/create`
                  )
                  i.fa-solid.fa-plus.me-1
                  | Tạo nhóm quyền
                // end col
            // end col
          // end row
        // end card-header
        .card-body.pt-0
          .row
            .col-lg-6
              +form-search()
          .table-responsive
            table.table.table-striped.mb-0
              thead.table-light
                tr
                  th STT
                  th Tên nhóm quyền
                  th Mô tả
                  th Trạng thái
                  th.text-end Hành động
              tbody
                each item, index in recordList
                  tr
                    td #{pagination.skip + index + 1}
                    td #{item.name}
                    td #{item.description}
                    td
                      if (item.status == "active")
                        span(class="badge bg-success") Hoạt động
                      else if (item.status == "inactive")
                        span(class="badge bg-danger") Tạm dừng
                    td.text-end
                      if (permissions.includes("role-edit"))
                        a(href=`/${pathAdmin}/role/edit/${item.id}`)
                          i.las.la-pen-alt.text-secondary.fs-18.ms-1
                      if (permissions.includes("role-delete"))
                        a(
                          href="javascript:;"
                          button-api
                          data-method="PATCH"
                          data-api=`/${pathAdmin}/role/delete/${item.id}`
                        )
                          i.las.la-trash-alt.text-secondary.fs-18.ms-1
          +pagination()
    // end col
