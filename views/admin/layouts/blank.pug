doctype html
html(
  data-bs-theme="light" 
  data-startbar="light" 
  dir="ltr" 
  lang="en"
  )
  head
    script.
      const pathAdmin = "#{pathAdmin}";
    meta(charset="utf-8")
    title #{pageTitle}
    meta(
      content="width=device-width, initial-scale=1, shrink-to-fit=no" 
      name="viewport"
      )
    meta(
      name="description" 
      content="Premium Multipurpose Admin & Dashboard Template"
      )
    meta(
      name="author" 
      content=""
      )
    meta(
      content="IE=edge" 
      http-equiv="X-UA-Compatible"
      )
    // App favicon
    link(
      href="/admin/assets/images/favicon.ico" 
      rel="shortcut icon"
      )
    // App css
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css")
    link(href="https://releases.transloadit.com/uppy/v4.18.2/uppy.min.css" rel="stylesheet")
    link(
      type="text/css" 
      rel="stylesheet" 
      href="/admin/assets/css/bootstrap.min.css"
      )
    link(
      type="text/css" 
      rel="stylesheet" 
      href="/admin/assets/css/icons.min.css"
      )
    link(
      type="text/css" 
      rel="stylesheet" 
      href="/admin/assets/css/app.min.css"
      )
    link(
      type="text/css" 
      rel="stylesheet" 
      href="/admin/assets/css/main.css"
      )
  // Top Bar Start
  body
    
    block main

    // Javascript
    // vendor js
    script(src="https://unpkg.com/just-validate@latest/dist/just-validate.production.min.js")
    script(src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js")
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src="https://cdn.tiny.cloud/1/6qrde4l6elwnvo9777fjuy25c3mpgxkhyuwi66w7ewn1mwb1/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous") 
    script(src="/admin/assets/libs/bootstrap/js/bootstrap.bundle.min.js")
    script(src="/admin/assets/libs/simplebar/simplebar.min.js")
    block script
    script(src="/admin/assets/js/app.js")
    script(src="/admin/assets/js/main.js")
    script(src="/admin/assets/js/uppy.js" type="module")
  // end body
